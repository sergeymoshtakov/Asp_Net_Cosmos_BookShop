@model BookShop.Models.Book

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author_ID" class="control-label"></label>
        <input asp-for="Author_ID" class="form-control" />
        <span asp-validation-for="Author_ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Decription" class="control-label"></label>
        <input asp-for="Decription" class="form-control" />
        <span asp-validation-for="Decription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
